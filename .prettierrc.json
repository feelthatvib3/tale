{
	"semi": true,
	"singleQuote": true,
	"tabWidth": 2,
	"printWidth": 80,
	"trailingComma": "all",
	"useTabs": true,
	"plugins": ["@trivago/prettier-plugin-sort-imports"],
	"importOrder": ["^@constants/(.*)$", "^@lib/(.*)$", "^@utils/(.*)$", "^[./]"],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true
}
